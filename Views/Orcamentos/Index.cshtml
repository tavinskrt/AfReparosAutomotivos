@model List<AfReparosAutomotivos.Models.Orcamentos>

@{
    ViewData["Title"] = "Lista de Orçamentos";
}

<div class=""><a asp-controller="Orcamentos" asp-action="Create" class="btn btn-primary">Novo Orçamento</a></div> 
<br>
<table class="table table-striped">
    <thead>
        <tr class="table-primary">
            <th class="text-left" scope="col">@Html.DisplayNameFor(model => model.First().idOrcamento)</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-left">Orçamento #@Html.DisplayFor(modelItem => item.idOrcamento)</td>
                <td><a asp-action="Edit" asp-route-id="@item.idOrcamento" class="btn btn-primary">Editar</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.idOrcamento" method="post">
                        <input type="hidden" name="idOrcamento" value="@item.idOrcamento">
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

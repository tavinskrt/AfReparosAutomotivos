@model AfReparosAutomotivos.Models.OrcamentosViewModel

@{
    ViewData["Title"] = "Orçamentos";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header text-white text-center rounded-top-4" style="background-color: #3b2e1a">
            <h3 class="mb-0">Cadastrar Orçamento</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create">
                <div class="row g-3">
                    <!--div class="col-md-6">
                        <label asp-for="idFuncionario" class="form-label fw-semibold">ID do Funcionário</label>
                        <input asp-for="idFuncionario" type="number" class="form-control" placeholder="Ex: 12"
                               >
                    </div-->

                    <div class="col-md-6">
                        <label asp-for="NomeCli" class="form-label fw-semibold">Nome do Cliente</label>
                        <input asp-for="NomeCli" type="text" class="form-control"
                              value="@(Model.NomeCli == "" ? "" : Model.NomeCli)" required>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DocumentoCli" class="form-label fw-semibold">Documento do Cliente</label>
                        <input asp-for="DocumentoCli" type="text" class="form-control" maxlength="14"
                              value="@(Model.DocumentoCli == "" ? "" : Model.DocumentoCli)" required oninput="this.value = this.value.replace(/[^0-9A-Z]/g,'')">
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TelefoneCli" class="form-label fw-semibold">Telefone do Cliente</label>
                        <input asp-for="TelefoneCli" type="text" class="form-control" maxlength="11"
                              value="@(Model.TelefoneCli == "" ? "" : Model.TelefoneCli)" required>
                    </div> 

                    <div class="col-md-6">
                        <label asp-for="EnderecoCli" class="form-label fw-semibold">Endereço do Cliente</label>
                        <input asp-for="EnderecoCli" type="text" class="form-control"
                              placeholder="Ex: Bairro Jardim, Rua João, número 3, São José do Rio Preto - SP"
                              value="@(Model.EnderecoCli == "" ? "" : Model.EnderecoCli)" required>
                    </div>

                    <!--div class="col-md-6">
                        <label asp-for="dataCriacao" class="form-label fw-semibold">Data de Criação</label>
                        <input asp-for="dataCriacao" type="datetime-local" class="form-control" required value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")">
                    </div-->

                    <!--div class="col-md-6">
                        <label asp-for="dataEntrega" class="form-label fw-semibold">Data de Entrega</label>
                        <input asp-for="dataEntrega" type="date" class="form-control">
                    </div-->

                    <!--div class="col-md-6">
                        <label asp-for="status" class="form-label fw-semibold">Status</label>
                        <input asp-for="status" type="number" class="form-control" min="1" max="3" step="1"
                               >
                        <small class="text-muted">1 = Em Aberto, 2 = Pago, 3 = Cancelado</small>
                    </div-->

                    <!--div class="col-md-6">
                        <label asp-for="total" class="form-label fw-semibold">Valor</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input asp-for="total" type="number" class="form-control" placeholder="Ex: 250.00"
                                   >
                        </div>
                    </div-->

                    <!--div class="col-md-6">
                        <label asp-for="formaPagamento" class="form-label fw-semibold">Forma de Pagamento</label>
                        <input asp-for="formaPagamento" type="text" class="form-control"
                               placeholder="Cartão, PIX, ..." required>
                    </div-->

                    <!--div class="col-md-6">
                        <label asp-for="parcelas" class="form-label fw-semibold">Parcelas</label>
                        <input asp-for="parcelas" type="number" class="form-control"
                               >
                    </div-->
                </div>

                <div class="d-flex justify-content-end gap-3 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Voltar</a>
                    <button type="submit" class="btn-login">Criar</button>
                </div>
            </form>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Login";
}

<div class="main-login">
    <div class="login-container">
        <a href="/Home" class="back-button">
            &#8592; <!-- seta para a esquerda -->
        </a>

        <img src="~/images/logo-af-reparos.png" alt="Logo empresa af-reparos-automotivos" width=100" height=100"/>

        <form class="login-form" asp-controller="Login" asp-action="Logar" method="post">
            <label>Usu√°rio:</label>
            <input type="text" name="username" required>

            <label>Senha:</label>
            <input type="password" name="senha" required>

            <button type="submit" class="btn-login">Entrar</button>
        </form>
    </div>
</div>

@if (TempData["Mensagem"] is string jsonMessage)
{
    var modal = System.Text.Json.JsonSerializer.Deserialize<Modal>(jsonMessage);
    <partial name="_Modal" model="modal"/>
    @section Scripts
    {
        <script>
            document.addEventListener('DOMContentLoaded', function ()
            {
                showGenericModal('@modal?.Id');
            });
        </script>
    }
} 
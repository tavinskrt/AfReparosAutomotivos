@model TaskWeb.Models.Tarefa

<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    </head>
    <body class="container">
        <h1>Edita Tarefa</h1>
        <form action="/tarefa/update/@Model.TarefaId" method="POST">
            <input name="Title" class="form-control" value="@Model.Title"/>
            <br/>
            <select name="TagId" class="form-control">
                @foreach(var tag in ViewBag.Tags) { 
                    <option value="@tag.TagId" @(tag.TagId == Model.TagId ? "selected" : "")>@tag.Title</option>
                }
            </select>
            <br/>
            <button class="btn btn-primary">Salvar</button>
        </form>
    </body>
</html>